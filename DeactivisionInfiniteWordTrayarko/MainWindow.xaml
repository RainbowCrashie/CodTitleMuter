<Window x:Class="DeactivisionInfiniteWordTrayarko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeactivisionInfiniteWordTrayarko"
        mc:Ignorable="d"
        Title="DeactivisionInfiniteWordTrayarko" Height="180" Width="256" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="89*"/>
        </Grid.RowDefinitions>
        <RadioButton x:Name="ShortcutKeyRadioButton" Content="Shortcut Key (CTRL+SHIFT+K)" HorizontalAlignment="Left" Margin="38,51,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <RadioButton x:Name="SecondsAfterRadioButton" Content="Seconds After:" HorizontalAlignment="Left" Margin="38,27,0,0" VerticalAlignment="Top" Grid.Row="1" IsChecked="True"/>
        <Label Content="Unnmute at:" HorizontalAlignment="Left" Margin="19,1,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <ComboBox x:Name="SecondsComboBox" HorizontalAlignment="Left" Margin="140,23,0,0" VerticalAlignment="Top" Width="45" Grid.Row="1"/>
        <Label x:Name="StatusLabel" Content="Label" HorizontalAlignment="Left" Margin="19,20,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
